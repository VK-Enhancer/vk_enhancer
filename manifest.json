{
  "manifest_version": 3,
  "action": {
      "default_popup": "popup.html",
      "default_title": "Настройки VK Enhancer"
   },
  "name": "VKEnhancer",
  "version": "1.4.2",
  "icons": {
      "128": "assets/icon128.png",
      "16": "assets/icon16.png",
      "24": "assets/icon24.png",
      "300": "assets/icon300.png",
      "32": "assets/icon32.png",
      "36": "assets/icon36.png",
      "48": "assets/icon48.png"
   	   },
  "description": "Enjoy your experience with VK Enhancer!",
  "host_permissions": [
    "*://vk.com/*"
  ],
  "permissions": ["tabs", "*://vk.com/*", "unlimitedStorage", "storage", "declarativeNetRequestWithHostAccess", "scripting", "downloads", "alarms", "activeTab" ],
  
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [ 

    {
      "matches": ["*://vk.com/*"], // Разрешение для vk.com
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ]
}